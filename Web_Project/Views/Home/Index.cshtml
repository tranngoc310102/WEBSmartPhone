@{
	var pros = Context.Session.GetString("Products");
	if (pros != null)
	{
		List<Product> products1 = JsonSerializer.Deserialize<List<Product>>(pros);
		ViewBag.Products = products1;
		Context.Session.Remove("Products");
	}
}
<div class="fashion_section">
	<div id="main_slider" class="carousel slide" data-ride="carousel">
		<div class="carousel-inner">
			@{
				int count = ViewBag.Products.Count;
				int Page = (int)Math.Ceiling((double)count / 3);
			}
			<div class="carousel-item active">
				<div class="container">
					<h1 class="fashion_taital">SmartPhone</h1>
					<div class="fashion_section_2">
						<div id="carousel-content" class="row">
							@for (int i = 0; i < Math.Min(3, count); i++)
							{
								var item = ViewBag.Products[i];
								<div class="col-lg-4 col-sm-4">
									<div class="box_main">
										<div class="electronic_img">
											<img src="@item.ProductImg">
										</div>
										<h4 class="shirt_text" style="margin-top: 1px;">@item.ProductName</h4>
										<p class="price_text">@($"{item.Price * 0.9:N0}") VND <span style="color: #262626;"><del>@($"{item.Price:N0}") VND</del></span></p>
										<div class="btn_main">
											<div class="buy_bt"><a href="/Home/Checkout?pid=@item.ProductId">Buy Now</a></div>
											<div class="seemore_bt"><a href="#">See More</a></div>
										</div>
									</div>
								</div>
							}
						</div>
					</div>
				</div>
			</div>
			@if (Page >= 2)
			{
				List<Product> p = ViewBag.Products;
				for (int i = 1; i < Page; i++)
				{
					<div class="carousel-item">
						<div class="container">
							<h1 class="fashion_taital">SmartPhone</h1>
							<div class="fashion_section_2">
								<div id="carousel-content" class="row">
									@for (int x = 3 * i; x < Math.Min(3 * i + 3, count); x++)
									{
										var item = p[x];
										<div class="col-lg-4 col-sm-4">
											<div class="box_main">
												<div class="electronic_img">
													<img src="@item.ProductImg">
												</div>
												<h4 class="shirt_text" style="margin-top: 1px;">@item.ProductName</h4>
												<p class="price_text">@($"{item.Price * 0.9:N0}") VND <span style="color: #262626;"><del>@($"{item.Price:N0}") VND</del></span></p>
												<div class="btn_main">
													<div class="buy_bt"><a href="/Home/Checkout?pid=@item.ProductId">Buy Now</a></div>
													<div class="seemore_bt"><a href="#">See More</a></div>
												</div>
											</div>
										</div>
									}
								</div>
							</div>
						</div>
					</div>
				}
			}

			}
		</div>
		<a class="carousel-control-prev" href="#main_slider" role="button" data-slide="prev">
			<i class="fa fa-angle-left"></i>
		</a>
		<a class="carousel-control-next" href="#main_slider" role="button" data-slide="next">
			<i class="fa fa-angle-right"></i>
		</a>
	</div>
</div>



<!-- fashion section end -->
